@model List<tasktracker.Models.StoryTable>
<div class="container">
    <table class="table table-striped table-condensed table-bordered">
        <thead>
            <tr>
                <th class="text-right">ID</th>
                <th class="text-left" style="width: 500px">Заявка</th>
                <th class="text-center" style="width: 50px">
                    <div class="btn-group">
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">Статус <span class="caret"></span></button>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="@Url.Action("Sort", new {stat = "All"})">Все</a></li>
                            <li><a href="@Url.Action("Sort", new {stat = "Открыта"})">Открыта</a></li>
                            <li><a href="@Url.Action("Sort", new {stat = "Решена"})">Решена</a></li>
                            <li><a href="@Url.Action("Sort", new {stat = "Возврат"})">Возврат</a></li>
                            <li><a href="@Url.Action("Sort", new {stat = "Закрыта"})">Закрыта</a></li>
                        </ul>
                    </div>
                </th>
                <th class="text-center">
                    Дата
                    <a href="@Url.Action("SortDateUp")"><i class="glyphicon glyphicon-sort-by-attributes"></i></a>
                    <a href="@Url.Action("SortDateDown")"><i class="glyphicon glyphicon-sort-by-attributes-alt"></i></a>
                </th>
                <th>Действие</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <td class="text-right">@Model[i].ID</td>
                    <td class="text-left">@Model[i].Story</td>
                    <td class="text-center">
                        @Model[i].Status
                    </td>
                    <td class="text-center">@Model[i].Time_enter</td>
                    <td>
                        <a href="@Url.Action("Delete", new {id = Model[i].ID})"><i class="glyphicon glyphicon-trash"></i></a>
                        <a href="@Url.Action("Edit", new {id = Model[i].ID})"><i class="glyphicon glyphicon-edit"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>